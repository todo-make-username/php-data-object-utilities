{
    "name": "matt/data-loader",
    "description": "A PHP helper for validating and injecting associative arrays into typed data classes.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Matt\\DataLoader\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Matthew Jordan",
            "email": "5577434+todo-make-username@users.noreply.github.com"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests --colors=always --display-notices --display-warnings",
        "coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit tests --colors=always --display-notices --display-warnings --coverage-html tests/coverage --coverage-filter src",
        "view-coverage": "open tests/coverage/index.html",
        "beautify": "vendor/bin/phpcbf"
    }
}
